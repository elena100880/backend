{% extends 'base.html.twig' %}   

{% block stylesheets1 %}
    <link rel="stylesheet" href="/css/add_to_cart.css">
{% endblock %}

{% block content %}           

    <h1>CHANGING ITEMS</h1>     

    <span>You are changing the the Product with id {{id}}:</span><br>
    {{name1}} from {{date1}}<br>
    ({{info1}}) <br>

    <br><br>
    
    <span>Enter your changes:</span><br>
    {{form(form1)}}
        
    {{form(form2)}}
    
    <br>
    
    {% if save is defined%}

        {% if save == "saved" %}  
        
            <span>Changes in product with id {{id}} was saved:</span><br>
            new Name: {{name1}}<br>
            new Date: {{date1}}<br>
            new Information: {{info1}}<br>
            
           
        {% endif %}
    {% endif %}
    
{% endblock %}
